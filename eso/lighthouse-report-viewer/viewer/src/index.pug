- var score = { performance: '37', accessibility: '70', best_practices: '100', seo: '50'}


<div class="scores-container large">
	<div class="scores-header">
		
		if (score.performance >= 0 && score.performance <= 50)
			<a href="#performance" class="performance gauge-wrapper fail per#{score.performance}">
				<div class="gauge-svg-wrapper">
					<svg viewBox="0 0 120 120" class="gauge">
						<circle class="gauge-base" r="56" cx="60" cy="60"></circle>
						<circle class="gauge-arc" transform="rotate(-90 60 60)" r="56" cx="60" cy="60"></circle>
					</svg>
				</div>
				<div class="gauge-percentage">#{score.performance}</div>
				<div class="gauge-label"></div>
			</a>
		else if (score.performance >= 51 && score.performance <= 74)
			<a href="#performance" class="performance gauge-wrapper average per#{score.performance}">
				<div class="gauge-svg-wrapper">
					<svg viewBox="0 0 120 120" class="gauge">
						<circle class="gauge-base" r="56" cx="60" cy="60"></circle>
						<circle class="gauge-arc" transform="rotate(-90 60 60)" r="56" cx="60" cy="60"></circle>
					</svg>
				</div>
				<div class="gauge-percentage">#{score.performance}</div>
				<div class="gauge-label"></div>
			</a>
		else if (score.performance >= 75 && score.performance <= 100)
			<a href="#performance" class="performance gauge-wrapper pass per#{score.performance}">
				<div class="gauge-svg-wrapper">
					<svg viewBox="0 0 120 120" class="gauge">
						<circle class="gauge-base" r="56" cx="60" cy="60"></circle>
						<circle class="gauge-arc" transform="rotate(-90 60 60)" r="56" cx="60" cy="60"></circle>
					</svg>
				</div>
				<div class="gauge-percentage">#{score.performance}</div>
				<div class="gauge-label"></div>
			</a>

		
		<a href="#accessibility" class="accessibility gauge-wrapper average per#{score.accessibility}">
			<div class="gauge-svg-wrapper">
				<svg viewBox="0 0 120 120" class="gauge">
					<circle class="gauge-base" r="56" cx="60" cy="60"></circle>
					<circle class="gauge-arc" transform="rotate(-90 60 60)" r="56" cx="60" cy="60"></circle>
				</svg>
			</div>
			<div class="gauge-percentage">#{score.accessibility}</div>
			<div class="gauge-label"></div>
		</a>

		
		<a href="#best-practices" class="best-practices gauge-wrapper pass per#{score.best_practices}">
			<div class="gauge-svg-wrapper">
				<svg viewBox="0 0 120 120" class="gauge">
					<circle class="gauge-base" r="56" cx="60" cy="60"></circle>
					<circle class="gauge-arc" transform="rotate(-90 60 60)" r="56" cx="60" cy="60"></circle>
				</svg>
			</div>
			<div class="gauge-percentage">#{score.best_practices}</div>
			<div class="gauge-label"></div>
		</a>

		
		<a href="#seo" class="seo gauge-wrapper average per#{score.seo}">
			<div class="gauge-svg-wrapper">
				<svg viewBox="0 0 120 120" class="gauge">
					<circle class="gauge-base" r="56" cx="60" cy="60"></circle>
					<circle class="gauge-arc" transform="rotate(-90 60 60)" r="56" cx="60" cy="60"></circle>
				</svg>
			</div>
			<div class="gauge-percentage">#{score.seo}</div>
			<div class="gauge-label"></div>
		</a>
	</div>
	
	
	<div class="scorescale">
		<span class="scorescale-range fail"></span>
		<span class="scorescale-range average"></span>
		<span class="scorescale-range pass"></span>
	</div>
		

</div>






